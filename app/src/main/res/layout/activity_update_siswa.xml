<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.UpdateSiswaActivity"
    android:background="@color/bluee">
    <include layout="@layout/label_admin2" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update data"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        >

    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/logosplash"
        android:backgroundTint="@color/cyan"
        android:backgroundTintMode="multiply"
        android:padding="285dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp">



        <EditText
            android:id="@+id/nis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/relative_rounded"
            android:hint="NIS"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/nisn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:background="@drawable/relative_rounded"
            android:hint="NISN"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="100dp"
            android:background="@drawable/relative_rounded"
            android:hint="Nama Siswa"
            android:padding="10dp"
            android:textSize="20dp"></EditText>


        <EditText
            android:id="@+id/jk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="150dp"
            android:background="@drawable/relative_rounded"
            android:hint="Jenis Kelamin"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/agama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="200dp"
            android:background="@drawable/relative_rounded"
            android:hint="Agama"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="250dp"
            android:background="@drawable/relative_rounded"
            android:hint="Alamat"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/tempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:background="@drawable/relative_rounded"
            android:hint="tempat tanggal lahir"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/tgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:background="@drawable/relative_rounded"
            android:hint="tempat tanggal lahir"
            android:padding="10dp"
            android:textSize="20dp"></EditText>



        <EditText
            android:id="@+id/namaortu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:background="@drawable/relative_rounded"
            android:hint="Nama orang tua"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <EditText
            android:id="@+id/nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:background="@drawable/relative_rounded"
            android:hint="Nomor hp orang tua"
            android:padding="10dp"
            android:textSize="20dp"></EditText>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="510dp"
            android:background="@drawable/relative_rounded"
            android:padding="10dp"
            android:text="Update"
            android:textColor="@color/black"
            android:textSize="20dp"></Button>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="UPT SMP NEGERI 2 GADINGREJO"
        android:textSize="10dp" />

</RelativeLayout>