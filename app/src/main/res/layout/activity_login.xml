<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/bluee">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"
        android:background="@drawable/logosplash"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="300dp"
        android:text="Silakan Login"
        android:textSize="20dp"></TextView>

    <EditText
        android:id="@+id/ed_nip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="350dp"
        android:width="20dp"
        android:background="@drawable/relative_rounded"
        android:hint="NIP"
        android:padding="10dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="405dp"
        android:width="20dp"
        android:background="@drawable/relative_rounded"
        android:hint="Email"
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/ed_email"/>

    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="460dp"
        android:inputType="textPassword"
        android:background="@drawable/relative_rounded"
        android:hint="password"
        android:padding="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="515dp"
        android:text="Anda belum mempunyai akun"
        android:textColor="@color/white"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="90dp"
        android:layout_marginVertical="550dp"
        android:background="@drawable/relative_rounded"
        android:padding="10dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="20dp">

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="UPT SMP NEGERI 2 GADINGREJO"
        android:textSize="10dp" />

</RelativeLayout>